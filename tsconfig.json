{
    "compilerOptions": {
      "target": "es2019",
      "module": "esnext",
      "strict": true,
      "importHelpers": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "baseUrl": ".",
      "rootDir": ".",
      "allowJs": false,
      "checkJs": false,
      "paths": {
        "laravel-tiptap": ["packages/*/dist", "packages/*/src"]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "files": [
      "./shims/alpine.d.ts",
      "./shims/image-blob-reduce.d.ts"
    ],
    "include": [
      "**/*.ts",
      "**/*.tsx"
    ],
    "exclude": [
      "**/node_modules",
      "**/dist",
      "**/vue-3"
    ]
  }
